<!DOCTYPE html>
<html>
<head>
	<title>this is a form page</title>
</head>
<body>

<%=form_for @user do |f|%>

<div class="form-group">
<%=f.label :firstname%>
<%=f.text_field :firstname %>
</div>

<div class="form-group">
<%=f.label :lastname%>
<%=f.text_field :lastname %>
</div>

<div class="form-group">
<%=f.label :Designation%>
<%=f.text_field :designation %>
</div>

<div class="form-group">
<%=f.label :origin%>
<%=f.text_field :origin %>
</div>

<div class="form-group">
<%=f.submit "Submit"%>
</div>


<%end%>

</body>
</html>